<?xml version="1.0" encoding="utf-8" ?>
<f:ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:d="http://xamarin.com/schemas/2014/forms/design"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:f="clr-namespace:Formulator;assembly=Formulator"
               xmlns:vm="clr-namespace:ViewModels"
               x:Class="$rootnamespace$.$safeitemname$"
               x:TypeArguments="vm:$safeitemname$ViewModel"
               mc:Ignorable="d">

    <d:ContentPage.BindingContext>
        <vm:$safeitemname$ViewModel />
    </d:ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
            <Label Text="(with Formulator)"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
    
</f:ContentPage>